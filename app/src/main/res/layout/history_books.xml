<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="4dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/card_livre"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="9dp"
        card_view:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <ImageView
        android:id="@+id/history_img"
        android:src="@drawable/university"
        android:layout_width="100dp"
        android:layout_height="150dp" />



    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/history_title"
            android:textSize="19dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="Titre du livre qui est dans l'image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/history_de"
            android:textColor="#000"
            android:textSize="19dp"
            android:layout_marginTop="30dp"
            android:text="De : 05/08/2018"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/history_a"
            android:textColor="#000"
            android:textSize="19dp"
            android:layout_marginTop="6dp"
            android:text="Ã  : 05/08/2018"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>


