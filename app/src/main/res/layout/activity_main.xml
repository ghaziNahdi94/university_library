<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background1"
    android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context="nahdi.ghazi.insat.com.insat_biblio.MainActivity">



    <ImageView
        android:layout_marginTop="15dp"
        android:src="@drawable/logo_white"
        android:layout_width="170dp"
        android:layout_height="170dp" />


    <EditText
        android:singleLine="true"
        android:textSize="30dp"
        android:id="@+id/log_in_email"
        android:textColorHint="#646464"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="10dp"
        android:paddingLeft="16dp"
        android:layout_marginTop="46dp"
        android:hint="Email"
        android:background="@drawable/edit_text_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="30dp"
        android:id="@+id/log_in_password"
        android:textColorHint="#646464"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/lock"
        android:hint="Mot de passe"
        android:paddingLeft="16dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/edit_text_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<RelativeLayout
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/log_in_button"
            android:textSize="35dp"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:text="Se connecter"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_sign_in_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/log_in_sign_in"
            android:layout_marginTop="15dp"
            android:textSize="42dp"
            android:textColor="#fff"
            android:text="S'inscrire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>


</LinearLayout>
</ScrollView>